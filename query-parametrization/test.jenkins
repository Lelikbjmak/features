#!groovy

pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'query-parametrization:latest'
    }
    stages {
        stage("Build JAR") {
            steps {
                script {
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean build'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('query-parametrization') {
                    script {
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    }
                }
            }
        }
    }
}
