#!groovy

pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'query-parametrization:latest'
    }
    stages {
        stage("Build JAR") {
            steps {
                dir('../..') {
                    script {
                        sh 'chmod +x ./gradlew'
                        sh './gradlew clean build'
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('..') {
                    script {
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    }
                }
            }
        }
    }
}
