#!groovy

pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'query-parametrization:latest'
    }
    stages {
        stage("Build JAR") {
            steps {
                script {
                    sh 'cd ../..'
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean build'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'cd query-parametrization'
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }
//        stage('Push Docker Image') {
//            steps {
//                script {
//
//                    sh "docker push ${DOCKER_IMAGE}"
//                }
//            }
//        }
    }
}
